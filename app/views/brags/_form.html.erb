<%= form_for(@brag) do |f| %>
    <% if @brag.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@@brag.errors.count, "error") %> prohibited this brag from being saved:</h2>

          <ul>
            <% @@brag.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <fieldset>
      <div class="accountBlocks accountNewUser">
        <h4 class="blockhdng">Add Brag</h4>
        <div class="inner formee">
          <div class="clearfix">
            <div class="reqFieldWrpr">
              <div class="formee-lbl right">
                <em class="formee-req">*</em>
                <span class="help">Indicates required field</span>
              </div>
            </div>
          </div>

          <div class="clearfix">
            <div class="one">
              <label>Title<em id="" class="formee-req">*</em></label>
              <%=f.text_field :title %>
            </div>
          </div>
          <div class="clearfix">
            <div class="one-half">
              <label>Image<em id="" class="formee-req">*</em></label>
              <%=f.file_field :imageData%>
            </div>

            <div class="one-fifth">
              <label>Weight</label>
              <%=f.text_field :weight %>
            </div>
          </div>



          <div class="clearfix">
            <div class="one-half">
              <label>Lake</label>
              <%=f.text_field :lake %>
            </div>
          </div>


          <div class="clearfix">
            <div class="one-fourth">
              <label>City</label>
              <%=f.text_field :city %>
            </div>
            <div class="one-fourth">
              <label>State</label>
              <%= f.collection_select :state, State.all, :state_abbr, :state_name %>

            </div>
          </div>

          <div class="clearfix">
            <div class="one-fourth">
              <label>Bait</label>
              <%=f.text_field :bait %>
            </div>
            <div class="one-fourth">
              <label>Rig</label>
              <%=f.text_field :rig %>

            </div>
          </div>

          <div class="clearfix">
            <%=f.submit 'Submit', class: 'button'%> <%=link_to 'Cancel', brags_path%>
          </div>


        </div>
      </div>
    </fieldset>


<% end %>
